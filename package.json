{
  "name": "resume",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "author": {
    "name": "Ibrahim Najjar"
  },
  "config": {
    "css": "tailwindcss -i bundle/main.pcss -o public/stylesheets/main.bundle.css --postcss"
  },
  "scripts": {
    "start": "concurrently -k -c blue,magenta -n APP,CSS \"npm:dev:server\" \"npm:dev:css\"",
    "dev:server": "vite --port 3000 --open",
    "dev:css": "cross-var $npm_package_config_css --watch"
  },
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-var": "^1.1.0",
    "esbuild": "^0.18.11",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-debug-screens": "^2.2.1",
    "vite": "^4.4.7"
  }
}
